<!DOCTYPE HTML>
<html>
  <head>
    <link rel="shortcut icon" type="/image/png" href="/favicon.png" />
    <script src="/js/ckeditor/ckeditor.js"></script>
    <script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
    <script src="//code.jquery.com/jquery-1.10.2.js"></script>
    <script src="//code.jquery.com/ui/1.11.0/jquery-ui.js"></script>
    <script type="text/javascript" src="/js/delete-confirm.js"></script>
    {% block javascript %}{% endblock %}
    <title>{% block title %}{% endblock %}</title>
    <link rel="stylesheet" href="/css/style.css" />
    <link rel="stylesheet" href="/css/post-it.css" />
  </head>
  <body onload="{% block onload %}{% endblock %}">
    <nav>
      {% if is_granted('IS_AUTHENTICATED_REMEMBERED') %}
        <a href="{{ path('admin_logout') }}">Logout</a>
      {% endif %}
      <div class="headernav" id="logocontainer">
        <a href="/"><img src="/images/AMP-Logo.png" alt="Index Page" id="navLogo" /></a>
      </div>
      <div class="headernav  menuPostIt" id="postitcontainer">
       {% block postit %}{% endblock %}
      </div>
    </nav>
    <div class="pageTextContainer">
      <article class="pageText">
        <h1 class="title">{% block header %}{% endblock %}</h1>
        {% block content %} {% endblock %}
      </article>
    </div>
  </body>
</html>
