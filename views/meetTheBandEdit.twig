{% extends "base.twig" %}

{% block javascript %}
  <script src="/js/ckeditor/ckeditor.js"></script>
  <script src="/js/preview-photo.js"></script>
  <script src="/js/update-form.js"></script>
{% endblock %}

{% block onload %} drawBandPostNote(); {% endblock %}

{% block title %} Meet the Band {% endblock %}

{% block postit %}<canvas id="meetTheBandpostcard" class="postitheader">Meet the Band</canvas>{% endblock %}

{% block header %} {{ title }} Band Member {%endblock%}

{% block content %}
<div id="meetTheBandUpdateForm">
  <form method="POST" enctype="multipart/form-data">
    {{ form_errors(form) }}
    {{ form_widget(form) }}
    {{ form_rest(form) }}
    <div class="previewContainer">
      <img id="previewBioPhoto" class="preview" src="#" alt="Cannot find image"/>
    </div>
  </form>
  <form class="cancel_button">
    <input onclick="location.href='/meettheband/'" type="button" value="Cancel"/>
  </form>
  <script>
    CKEDITOR.replace('form_bio');
  </script>
</div>
{% endblock %}

